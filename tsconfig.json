{
    "compilerOptions": {
        "incremental": true,
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "outDir": "dist/",
        "tsBuildInfoFile": ".tsbuildinfo",
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
